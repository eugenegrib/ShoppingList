<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnMoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText"
        android:layout_alignBottom="@id/editText"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:paddingVertical="8dp"
        android:src="@drawable/ic_baseline_unfold_more_24" />

    <CheckBox
        android:id="@+id/checkBoxDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText"
        android:layout_alignBottom="@id/editText"
        android:layout_toEndOf="@id/btnMoveItem"
        android:paddingVertical="8dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ibDelete"
        android:layout_toEndOf="@id/checkBoxDone"
        android:background="@null"
        android:ems="10"
        android:hint="@string/empty"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="4sp"
        android:paddingVertical="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp"
        tools:text="Какая-то покупка"
        />

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText"
        android:layout_alignBottom="@id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:background="@null"
        android:paddingVertical="8dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_close_24" />
</RelativeLayout>
